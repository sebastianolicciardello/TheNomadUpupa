---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');
const italianPosts = allPosts.filter(post => post.slug.startsWith('it/'));
const sortedPosts = italianPosts.sort((a, b) => b.data.eventTime.getTime() - a.data.eventTime.getTime());
---

<Layout title="Archivio - The Nomad Upupa" lang="it">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <h1 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 dark:text-gray-100 mb-4">
        Archivio delle Riflessioni
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Tutti i pensieri, viaggi e momenti raccolti nel tempo.
      </p>
    </div>

    {sortedPosts.length > 0 ? (
      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
            <div class="md:flex">
              {post.data.cover && (
                <div class="md:w-1/3">
                  <img 
                    src={post.data.cover} 
                    alt={`Copertina per ${post.data.title}`}
                    class="w-full h-48 md:h-full object-cover"
                  />
                </div>
              )}
              <div class={`p-6 ${post.data.cover ? 'md:w-2/3' : 'w-full'}`}>
                <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-3">
                  <time datetime={post.data.eventTime.toISOString()}>
                    {post.data.eventTime.toLocaleDateString('it-IT', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
                
                <h2 class="text-xl md:text-2xl font-serif font-semibold text-gray-900 dark:text-gray-100 mb-3">
                  <a 
                    href={`/it/posts/${post.slug.replace('it/', '')}/`} 
                    class="hover:text-warm-600 dark:hover:text-warm-400 transition-colors"
                  >
                    {post.data.title}
                  </a>
                </h2>
                
                <div class="flex items-center justify-between">
                  <a 
                    href={`/it/posts/${post.slug.replace('it/', '')}/`}
                    class="inline-flex items-center text-warm-600 dark:text-warm-400 hover:text-warm-700 dark:hover:text-warm-300 transition-colors font-medium"
                  >
                    Leggi di pi√π
                    <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400 text-lg">
          Nessuna riflessione ancora scritta. Torna presto per nuovi contenuti.
        </p>
      </div>
    )}
  </div>
</Layout>