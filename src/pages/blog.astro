---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Archive - The Nomad Upupa">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <h1 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 dark:text-gray-100 mb-4">
        Archive of Reflections
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        All thoughts, travels, and moments collected through time.
      </p>
    </div>

    {sortedPosts.length > 0 ? (
      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
            <div class="md:flex">
              {post.data.cover && (
                <div class="md:w-1/3">
                  <img 
                    src={post.data.cover} 
                    alt={`Copertina per ${post.data.title}`}
                    class="w-full h-48 md:h-full object-cover"
                  />
                </div>
              )}
              <div class={`p-6 ${post.data.cover ? 'md:w-2/3' : 'w-full'}`}>
                <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-3">
                  <time datetime={post.data.date.toISOString()}>
                    {post.data.date.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {post.data.coords && (
                    <span class="inline-flex items-center text-warm-600 dark:text-warm-400">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                      </svg>
                      Georeferenced
                    </span>
                  )}
                </div>
                
                <h2 class="text-xl md:text-2xl font-serif font-semibold text-gray-900 dark:text-gray-100 mb-3">
                  <a 
                    href={`${import.meta.env.BASE_URL}/posts/${post.slug}/`} 
                    class="hover:text-warm-600 dark:hover:text-warm-400 transition-colors"
                  >
                    {post.data.title}
                  </a>
                </h2>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.map((tag: string) => (
                      <span class="px-2 py-1 bg-warm-100 dark:bg-warm-800 text-warm-700 dark:text-warm-300 rounded-full text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                
                <div class="flex items-center justify-between">
                  <a 
                    href={`${import.meta.env.BASE_URL}/posts/${post.slug}/`}
                    class="inline-flex items-center text-warm-600 dark:text-warm-400 hover:text-warm-700 dark:hover:text-warm-300 transition-colors font-medium"
                  >
                    Read more
                    <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400 text-lg">
          No reflections written yet. Come back soon for new content.
        </p>
      </div>
    )}
  </div>
</Layout>
