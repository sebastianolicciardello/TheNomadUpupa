---
export interface Props {
  title?: string;
  description?: string;
  blogUrl?: string;
  blogText?: string;
  mapUrl?: string;
  mapText?: string;
  aboutUrl?: string;
  aboutText?: string;
}

const { 
  title = "Discover More",
  description = "Explore the complete collection of reflections, discover the places I've visited, or learn more about the journey behind these words.",
  blogUrl = "/blog/",
  blogText = "All Reflections",
  mapUrl = "/map/",
  mapText = "Journey Map",
  aboutUrl = "/about/",
  aboutText = "About Me"
} = Astro.props;
---

<section class="text-center bg-warm-50 dark:bg-gray-800 rounded-lg p-8">
  <h2 class="text-2xl font-serif font-semibold text-gray-900 dark:text-gray-100 mb-4">
    {title}
  </h2>
  <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed mb-6">
    {description}
  </p>
  <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
    <a 
      href={blogUrl} 
      class="inline-flex items-center px-6 py-3 bg-warm-600 dark:bg-warm-700 text-white rounded-lg hover:bg-warm-700 dark:hover:bg-warm-600 transition-colors duration-200"
    >
      {blogText}
    </a>
    <a 
      href={mapUrl} 
      class="inline-flex items-center px-6 py-3 bg-gray-600 dark:bg-gray-700 text-white rounded-lg hover:bg-gray-700 dark:hover:bg-gray-600 transition-colors duration-200"
    >
      {mapText}
    </a>
    <a 
      href={aboutUrl} 
      class="inline-flex items-center px-6 py-3 bg-gray-100 dark:bg-gray-600 text-gray-700 dark:text-white rounded-lg hover:bg-gray-200 dark:hover:bg-gray-500 transition-colors duration-200"
    >
      {aboutText}
    </a>
  </div>
</section>