---
import PostCard from './PostCard.astro';

export interface Props {
  posts: any[];
  lang?: 'en' | 'it';
  emptyMessage?: string;
}

const { 
  posts, 
  lang = 'en',
  emptyMessage = 'No reflections written yet. Come back soon for new content.'
} = Astro.props;
---

{posts.length > 0 ? (
  <div class="space-y-6">
    {posts.map((post) => (
      <PostCard post={post} lang={lang} />
    ))}
  </div>
) : (
  <div class="text-center py-12">
    <p class="text-gray-500 dark:text-gray-400 text-lg">
      {emptyMessage}
    </p>
  </div>
)}