---
export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "The Nomad Upupa", 
  description = "A timeless reflective journal. Thoughts, places, and moments that interweave through time, creating an emotional map of my inner and outer journeys."
} = Astro.props;
---

<div class="text-center mb-16">
  <h1 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 dark:text-gray-100 mb-8">
    {title}
  </h1>
  <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed whitespace-pre-line">
    {description}
  </p>
</div>